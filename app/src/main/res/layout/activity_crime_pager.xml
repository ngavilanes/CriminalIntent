<?xml version="1.0" encoding="utf-8"?>



<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v4.view.ViewPager
        android:id="@+id/crime_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"></android.support.v4.view.ViewPager>


    <Button
        android:id="@+id/jump_Front_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_margin="16dp"
        android:text="Jump to Front"

        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:text="Jump to End"
            android:id="@+id/jump_End_Button"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"/>


</FrameLayout>

